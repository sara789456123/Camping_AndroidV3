<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityListScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91e2ff"
    android:padding="16dp"
    tools:context=".CampingActivitiesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bouton de déconnexion -->
        <Button
            android:id="@+id/deconnexionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:text="Déconnexion"
            android:textColor="#024466"
            android:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="Activités du Camping"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Activité 1 - Balade à Poney -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/poney" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Balade à Poney"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#024466" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu : Prairie des Bois"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 20 juillet 2025"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Partez pour une balade conviviale en pleine nature accompagnés de nos poneys adorables. Une activité familiale idéale pour les enfants."
                android:textSize="14sp"
                android:textColor="#333333" />

            <Button
                android:id="@+id/participerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="Participer"
                android:textColor="#024466" />
        </LinearLayout>

        <!-- Activité 2 - Soirée Feu de Camp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/feu_camp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Soirée Feu de Camp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#024466" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu : Clairière centrale"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 21 juillet 2025"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profitez d'une soirée chaleureuse autour d'un feu de camp, avec des chants, des histoires et des marshmallows grillés sous les étoiles."
                android:textSize="14sp"
                android:textColor="#333333" />

            <Button
                android:id="@+id/participerButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="Participer"
                android:textColor="#024466" />
        </LinearLayout>

        <!-- Activité 3 - Course d'orientation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/course" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Course d’orientation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#024466" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu : Forêt du Nord"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 22 juillet 2025"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mettez vos talents à l’épreuve en retrouvant les balises cachées dans la forêt ! Activité sportive et ludique pour petits et grands."
                android:textSize="14sp"
                android:textColor="#333333" />

            <Button
                android:id="@+id/participerButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="Participer"
                android:textColor="#024466" />
        </LinearLayout>

        <!-- Activité 4 - Match de Volley -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/volley" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Match de Volley"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#024466" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu : Terrain de plage"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 23 juillet 2025"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Formez vos équipes et affrontez-vous dans un match amical de volley en plein air. Bonne humeur et esprit d’équipe garantis !"
                android:textSize="14sp"
                android:textColor="#333333" />

            <Button
                android:id="@+id/participerButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="Participer"
                android:textColor="#024466" />
        </LinearLayout>

        <!-- Activité 5 - Partie de Tennis -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/poney" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Partie de Tennis"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#024466" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu : Terrain de sport"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 24 juillet 2025"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Viens affronter un adversaire sur notre terrain de tennis. Prêt(e) à montrer tes talents de raquette ?"
                android:textSize="14sp"
                android:textColor="#333333" />

            <Button
                android:id="@+id/participerButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="Participer"
                android:textColor="#024466" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
